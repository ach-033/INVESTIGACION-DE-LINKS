  };

  function mostrar(num) {
    const contenido = document.getElementById("contenido");
    if (apartados[num]) {
      contenido.innerHTML = `<h2>${apartados[num].titulo}</h2><pre class="typing">${apartados[num].texto}</pre>`;
    } else {
      contenido.innerHTML = "<p>Selecciona un número válido.</p>";
    }
  }
</script>

